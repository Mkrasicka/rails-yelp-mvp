<div class="container">
    <%= @restaurant.name %>

  <ul>
    <li>Category: <%= @restaurant.category %></li>
    <li>Address: <%= @restaurant.address %>
    <li>Phone number: <%= @restaurant.phone_number %></li>
  </ul>

  <hr>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>

  <hr>
  <div>
    <h1>New review</h1>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating, collection: 0..5 %>
      <%= f.input :content %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>

  <hr>
  <div>
  <%= link_to edit_restaurant_path(@restaurant) do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
      <%= link_to restaurant_path(@restaurant), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
        <i class="fa-regular fa-trash-can"></i>
      <% end %>
      <%= link_to "Back", restaurants_path %>
  </div>
</div>
